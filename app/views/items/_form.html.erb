
<%= simple_form_for(@item) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.label :title, class:"form-control" %>
    <%= f.input :title, class:"form-control string", required: true, label: false  %>
    <br>
    <%= f.label :quantity, class:"form-control" %>
    <%= f.input :quantity, required: true, label: false %>
    <br>
    <%= f.label :price, class:"form-control" %>
    <%= f.input :price, required: true, label: false %>
    <br>
    <%= f.label :description, class:"form-control" %>
    <%= f.input :description, required: true, label: false %>
    <br>
    <%= f.label :image, class:"form-control" %>
    <%= f.file_field :image %>
  </div>

  <br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
